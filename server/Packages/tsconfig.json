{
  "compilerOptions": {
    "module": "nodenext",
    "target": "esnext",
    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "lib": ["esnext"],
    "types": ["node"],

    // Path aliases
    "baseUrl": ".",
    "paths": {
      "@models": ["Packages/models"],
      "@models/*": ["Packages/models/*"]
    },

    // Output for Node
    "rootDir": ".",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true
  },

  "include": [
    "Services/**/*",
    "Packages/models/**/*"
  ],

  "exclude": ["node_modules", "dist"]
}
